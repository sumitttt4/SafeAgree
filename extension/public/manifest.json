{
    "manifest_version": 3,
    "name": "SafeAgree - AI Legal Assistant",
    "version": "1.0",
    "description": "Analyze Terms of Service and Contracts instantly.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://safeagree.tech/*",
        "http://localhost:3000/*",
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Open SafeAgree"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    }
}